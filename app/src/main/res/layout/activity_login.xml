<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F1E">

    <!-- Header  -->
    <View
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF6B35"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.38"/>


    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_card"
        android:alpha="0.15"
        android:rotation="45"
        android:translationX="-80dp"
        android:translationY="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_button_primary"
        android:alpha="0.12"
        android:rotation="-30"
        android:translationX="200dp"
        android:translationY="-20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/bg_card"
        android:alpha="0.1"
        android:rotation="15"
        android:translationX="100dp"
        android:translationY="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/space_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="48dp">

            <!-- Contenedor de títulos -->
            <LinearLayout
                android:id="@+id/titleContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="40dp"
                android:paddingBottom="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Título  -->
                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_titulo"
                    android:textColor="#FFFFFF"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="2dp"
                    android:fontFamily="sans-serif-medium"/>

                <!-- Línea  -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="12dp"
                    android:background="#00F5FF"/>

                <!-- Subtítulo  -->
                <TextView
                    android:id="@+id/tvSubtitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/login_subtitulo"
                    android:textColor="#FFFFFF"
                    android:alpha="0.8"
                    android:textSize="17sp"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="6dp"
                    android:fontFamily="sans-serif-light"/>
            </LinearLayout>

            <!-- Tarjeta del formulario -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tarjetaFormulario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="@dimen/space_16"
                app:cardElevation="24dp"
                app:cardCornerRadius="32dp"
                app:cardBackgroundColor="#1A1A2E"
                app:strokeWidth="1dp"
                app:strokeColor="#2D2D44"
                app:layout_constraintTop_toBottomOf="@id/titleContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_max="@dimen/max_card_width">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <!-- Email Input  -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email_hint"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="#252541"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeColor="#6C63FF"
                        app:hintTextColor="#6C63FF"
                        app:startIconDrawable="@android:drawable/ic_dialog_email"
                        app:startIconTint="#6C63FF"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                        <EditText
                            android:id="@+id/edtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#6B6B8D"
                            android:imeOptions="actionNext"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password Input  -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:hint="@string/password_hint"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="#252541"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeColor="#6C63FF"
                        app:hintTextColor="#6C63FF"
                        app:endIconMode="password_toggle"
                        app:endIconTint="#6C63FF"
                        app:startIconDrawable="@android:drawable/ic_lock_lock"
                        app:startIconTint="#6C63FF"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                        <EditText
                            android:id="@+id/edtPass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#6B6B8D"
                            android:imeOptions="actionDone"
                            android:paddingTop="18dp"
                            android:paddingBottom="18dp"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botón Login  -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/bg_button_primary"
                        android:text="@string/btn_login"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:letterSpacing="0.08"
                        android:elevation="8dp"
                        app:cornerRadius="18dp"
                        android:stateListAnimator="@null"
                        android:textAllCaps="false"/>

                    <!-- Recuperar contraseña -->
                    <TextView
                        android:id="@+id/tvRecuperarpass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="@string/olviste_pass"
                        android:textColor="#8B83FF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#2D2D44"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="o"
                            android:textColor="#6B6B8D"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textSize="14sp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#2D2D44"/>
                    </LinearLayout>

                    <!-- Crear cuenta  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="#252541"
                        android:padding="16dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no_cuenta"
                            android:textColor="#9E9EB8"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tvCrear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/crear_cuenta"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="#00F5FF"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>