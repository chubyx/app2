<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F1E"
    tools:context=".LoginActivity$HomeActivity">

    <!-- Barra superior moderna -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="#FF6B35"
            android:title="@string/menu_principal"
            android:titleTextColor="#FFFFFF"
            app:titleCentered="true"
            android:elevation="8dp"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido desplazable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Card de bienvenida -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="12dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#1A1A2E"
                app:strokeColor="#FF6B35"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvBienvenida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bienvenido"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:letterSpacing="0.01"/>

                    <View
                        android:layout_width="50dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="8dp"
                        android:background="#00F5FF"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botones con diseÃ±o moderno -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIrPerfil"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/ir_perfil"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#252541"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_person"
                app:iconTint="#6C63FF"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconSize="28dp"
                android:layout_marginBottom="12dp"
                android:elevation="6dp"
                android:textAlignment="textStart"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAbrirWeb"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/abrir_web"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#252541"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_web"
                app:iconTint="#00F5FF"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconSize="28dp"
                android:layout_marginBottom="12dp"
                android:elevation="6dp"
                android:textAlignment="textStart"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEnviarCorreo"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/enviar_correo"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#252541"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_email"
                app:iconTint="#FF6B35"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconSize="28dp"
                android:layout_marginBottom="12dp"
                android:elevation="6dp"
                android:textAlignment="textStart"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompartir"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/compartir_texto"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#252541"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_share"
                app:iconTint="#8B83FF"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconSize="28dp"
                android:layout_marginBottom="12dp"
                android:elevation="6dp"
                android:textAlignment="textStart"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLinterna"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/linterna"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#252541"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_flashlight"
                app:iconTint="#FFD700"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconSize="28dp"
                android:layout_marginBottom="12dp"
                android:elevation="6dp"
                android:textAlignment="textStart"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCamara"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/abrir_camara"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#252541"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_camera"
                app:iconTint="#00F5FF"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconSize="28dp"
                android:layout_marginBottom="12dp"
                android:elevation="6dp"
                android:textAlignment="textStart"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMaps"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/maps"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#252541"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_maps"
                app:iconTint="#FF6B35"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconSize="28dp"
                android:layout_marginBottom="12dp"
                android:elevation="6dp"
                android:textAlignment="textStart"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCalendario"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/calendario"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#252541"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_calendario"
                app:iconTint="#6C63FF"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconSize="28dp"
                android:layout_marginBottom="12dp"
                android:elevation="6dp"
                android:textAlignment="textStart"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIrConfig"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/configuraciones"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#252541"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_settings"
                app:iconTint="#8B83FF"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconSize="28dp"
                android:layout_marginBottom="12dp"
                android:elevation="6dp"
                android:textAlignment="textStart"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>